{
    "compilerOptions": {
        "alwaysStrict": true,
        "baseUrl": "../typings/",
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "removeComments": true,
        "preserveConstEnums": false,
        "listFiles": false,
        "pretty": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "target": "es6",
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "declaration": true,
        "sourceMap": true,
        "composite": true
	},
    "compileOnSave": true,
    "allowJs": true,
    "include": [
        "./test"
    ],
    "references": [{
        "path": "../server"
    }]
}