{
  "name": "password-manager",
  "version": "1.0.0",
  "description": "A password manager",
  "main": "server/app/main.js",
  "repository": "https://github.com/SanderRonde/password-manager",
  "author": "Sander Ronde <awsdfgvhbjn@gmail.com>",
  "license": "MIT",
  "private": true,
  "ava": {
    "files": [
      "shared/test/*.js",
      "server/test/tests/*.js",
      "server/test/tests/imports/*.js",
      "server/test/tests/cli/*.js",
      "server/test/tests/cli/account/*.js",
      "server/test/tests/cli/backup/*.js",
      "server/test/tests/server/*.js",
      "server/test/tests/server/api/*.js",
      "server/test/tests/server/api/user/*.js",
      "server/test/tests/server/api/password/*.js",
      "server/test/tests/server/api/instance/*.js",
      "server/test/tests/server/api/workflows/*.js",
      "server/test/tests/server/api/instance/2fa/*.js"
    ]
  },
  "nodemonConfig": {
    "ext": "js",
    "exec": "set NODE_ENV=development&& node server/app/main.js server --http 1256 --https 1257 --https-key ./certs/cert.key --https-cert ./certs/cert.crt -d mongodb://127.0.0.1:27017/somedb -p somepw --development --databaseless --no-https-only",
    "watch": [
      "server/app/actions/server/webserver/server/"
    ]
  },
