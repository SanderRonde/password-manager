{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Mocha All",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"args": [
				"--timeout",
				"999999",
				"--colors",
				"${workspaceFolder}/test/test.js"
			],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		}, {
			"type": "node",
			"request": "launch",
			"name": "Launch Server",
			"program": "${workspaceFolder}/server/app/main.js",
			"args": [
				"server",
				"--http", "1256",
				"-d", "mongodb://127.0.0.1:27017/somedb",
				"-p", "somepw",
				"--no-https-only"
			],
		}, {
			"type": "node",
			"request": "launch",
			"name": "Launch Server (databaseless)",
			"program": "${workspaceFolder}/server/app/main.js",
			"args": [
				"server",
				"--http", "1256",
				"-d", "mongodb://127.0.0.1:27017/somedb",
				"-p", "somepw",
				"--databaseless",
				"--no-https-only"
			],
		}, {
			"type": "node",
			"request": "launch",
			"env": {
				"NODE_ENV": "development"
			},
			"name": "Launch Server (development)",
			"program": "${workspaceFolder}/server/app/main.js",
			"args": [
				"server",
				"--http", "1256",
				"-d", "mongodb://127.0.0.1:27017/somedb",
				"-p", "somepw",
				"--development",
				"--no-https-only"
			],
		}, {
			"type": "node",
			"request": "launch",
			"env": {
				"NODE_ENV": "development"
			},
			"name": "Launch Server (development, databaseless)",
			"program": "${workspaceFolder}/server/app/main.js",
			"args": [
				"server",
				"--http", "1256",
				"-p", "somepw",
				"--development",
				"--databaseless",
				"--no-https-only"
			],
		}, {
			"type": "node",
			"request": "launch",
			"env": {
				"NODE_ENV": "development"
			},
			"name": "Launch HTTPS Server (development, databaseless)",
			"program": "${workspaceFolder}/server/app/main.js",
			"args": [
				"server",
				"--http", "1256",
				"--https", "1257",
				"--https-key", "./certs/cert.key",
				"--https-cert", "./certs/cert.crt",
				"-p", "somepw",
				"--development",
				"--databaseless",
				"--no-https-only"
			],
		}
	]
}