{
    "compilerOptions": {
        "alwaysStrict": true,
        "baseUrl": "../typings/",
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "removeComments": true,
        "preserveConstEnums": false,
        "listFiles": false,
        "pretty": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "target": "es2015",
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "composite": true
	}, 
    "allowJs": true,
    "compileOnSave": true,
    "include": [
        "app/",
        "test/"
    ],
    "exclude": [
        "app/actions/server/webserver/client/build",
        "app/actions/server/webserver/client/src",
        "app/actions/server/webserver/client/static"
    ]
}