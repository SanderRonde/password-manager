{
    "compilerOptions": {
        "jsx": "react",
        "alwaysStrict": true,
        "baseUrl": "../typings/",
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "removeComments": true,
        "preserveConstEnums": false,
        "listFiles": false,
        "pretty": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "target": "es2015",
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "composite": true,
        "declaration": true
	}, 
    "compileOnSave": true,
    "allowJs": true,
    "include": [
        "app/**/*",
        "test/**/*"
    ],
    "exclude": [
        "app/actions/server/websever/client/"
    ],
    "references": [{
        "path": "../shared"   
    }]
}