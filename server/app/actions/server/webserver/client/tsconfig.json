{
    "compilerOptions": {
		"baseUrl": ".",
		"paths": { "*": ["types/*"] },
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "removeComments": true,
        "preserveConstEnums": false,
        "listFiles": false,
        "pretty": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "target": "esnext",
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "composite": true,
        "declaration": true
	}, 
    "allowJs": true,
    "compileOnSave": true,
    "include": [
        "src",
        "static",
        "../../../../../../typings/"
    ],
    "references": [{
        "path": "../../../../../../shared"
    }]
}